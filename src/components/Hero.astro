---
import { Image } from 'astro:assets';
import Link from '../components/ui/link.astro';
import heroBackground from '../assets/hero-background.jpg';
---

<section class="relative w-full h-screen flex items-center justify-center">
  <div class="absolute inset-0 z-0">
    <Image
      src={heroBackground}
      alt="Industrial automation background"
      class="w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-black opacity-50"></div>
  </div>
  
  <div class="relative z-10 text-center text-white max-w-4xl mx-auto px-4">
    <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">
      Equipo de control y automatización para la industria
    </h1>
    <p class="text-xl md:text-2xl mb-8">
      Somos líderes en ventas de equipo de control y automatización
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <Link
        href="#"
        target="_blank"
        class="text-lg"
        rel="noopener noreferrer"
      >
        Mercado Libre
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener noreferrer"
        href="#"
        class="text-lg"
        target="_blank"
      >
        Nuestros Productos
      </Link>
    </div>
  </div>
</section>